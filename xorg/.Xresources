
! Colours
xterm*termName: xterm-256color
xterm*background: Black
xterm*foreground: grey

! Font
xterm*faceName: IBM Plex Mono
xterm*faceSize: 10
xterm*renderFont: true

! VT Font Menu: Unreadable
xterm*faceSize1: 8
! VT font menu: Tiny
xterm*faceSize2: 10
! VT font menu: Medium
xterm*faceSize3: 12
! Large and Huge seem to be backwards or could be an issue with IBM Plex
! VT font menu: Large
xterm*faceSize4: 14
! VT font menu: Huge
xterm*faceSize5: 16

! Key bindings
xterm*VT100.Translations: #override \
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d) \n\
    Shift <KeyPress> Insert: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:    copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>N:    exec-formatted("xterm '%s'", word) \n\
    Ctrl Shift <Key>T:    dump-html() exec-formatted("~/xterm-url-picker.sh '%s'", word) \n\
    Alt <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY) \n\
    Alt <Btn3Up>: dump-html() exec-formatted("xdg-open '%t'", PRIMARY) \n

!
! Ctrl Shift <Key>N above does not work for some reason, should launch a new xterm

! Ctrl Shift <Key>T above does not work for some reason
! It should launch rofi via ~/xterm-url-picker.sh. 
! It *does* successfully dump-html() and then rofi works if ~/xterm-url-picker.sh is run manually.
!

! Couldnt get it to work as a one liner either
!Ctrl Shift <Key>T:    dump-html() exec-formatted("xdg-open $(grep -oE '(http|https)://[a-zA-Z0-9./?=_%%:-]*' ~/xterm.*.xhtml | rofi -dmenu)", PRIMARY) \n\


! ~/xterm-url-picker.sh contents:
! #!/usr/bin/env bash
! xdg-open $(grep -hoE '(http|https)://[a-zA-Z0-9./?=_%:-]*' ~/xterm.*.xhtml | rofi -dmenu)

